<%= form_with(model: list) do |form| %>
  <% if list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
        <% list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="field form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control", placeholder: "Title" %>
    </div>

    <br />

    <div class="field form-group">
      <%= form.label :notes %>
      <%= form.rich_text_area :notes, class: "form-control", placeholder: "...", style: "height: 200px;" %>
    </div>
    <br />

    <div class="form-check">
    <%= form.check_box :completed, class: "form-check-input"%>
    <%= form.label :completed, "Completed", class: "form-check-label" %>
    </div>

    <br />
    
    <div>
      <%= form.submit %>
    </div>
  </div>
<% end %> 

<div class="container">
  <br />
  <h3>Follow up items</h3>
  <br />
  <table class="table">
    <thead>
      <tr>
        <th>Discussion Item</th>
        <th>Notes</th>
        <th>Completed</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @lists.each do |list| %>

      <% if list.completed %>
        <tr class="table-secondary">
          <td class="striker col-2"><%= link_to list.title, edit_list_path(list), class:"custom-link"%></td>
          <td><%= list.notes %></td>
          <td><%= list.completed %></td>
          <td class="text-right">
            <%= button_to list_path(list), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link text-danger", style: "padding: 0; border: none; background: none;" do %>
              <i class="bi bi-trash3"></i>
            <% end %>
          </td>

          </tr>

          <% else %>

          <tr>
            <td><%= link_to list.title, edit_list_path(list), class:"custom-link" %></td>
            <td><%= list.notes %></td>
            <td><%= list.completed %></td>
            <td class="text-right">
              <%= button_to list_path(list), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link text-danger", style: "padding: 0; border: none; background: none;" do %>
                <i class="bi bi-trash3"></i>
              <% end %>
            </td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br />
  <%= will_paginate @lists, class:"page-item"%>
  <br />
  <%= link_to 'New Item', new_list_path, class: "btn btn-success" %>
  <br />
  <br />
</div>

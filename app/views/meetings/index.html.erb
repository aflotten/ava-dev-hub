<h1>Meetings</h1>
<div>
  <%= turbo_stream_from "meetings" %>
  <%= turbo_frame_tag "meeting_form"%>
  <%= link_to 'New Meeting', new_meeting_path, class: "btn btn-success", data: {"turbo-frame": "meeting_form"} %>
  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th colspan="3">Body</th>
        </tr>
      </thead>
      <tbody id="meetings">
        <%= render "meetings"%>
      </tbody>
    </table>
  </div>
</div>

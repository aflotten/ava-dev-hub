<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td class="col-2"><%= link_to meeting.title, edit_meeting_path(meeting), class: "custom-link" %></td>
        <td><%= meeting.body %></td>
        <td class="text-right">
            <%= button_to meeting_path(meeting), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link text-danger", style: "padding: 0; border: none; background: none;" do %>
              <i class="bi bi-trash3"></i>
            <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>